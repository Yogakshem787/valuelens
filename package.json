{
  "name": "valuelens-reverse-dcf-screener",
  "version": "1.0.0",
  "description": "Reverse DCF Stock Screener for Indian Listed Stocks",
  "private": true,
  "scripts": {
    "start:backend": "node backend/server.js",
    "start:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "setup": "npm install && cd frontend && npm install",
    "start": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "better-sqlite3": "^9.4.3",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
